@{
    var isLoggedIn = Context.Session.GetString("UserName") != null;
    var userName = Context.Session.GetString("UserName");
    var role = Context.Session.GetString("Role");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RoleBasedProductApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">RoleProdApp</a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (isLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="ProductList">Products</a>
                        </li>

                        @if (role == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Product" asp-action="CreateProduct">Add Product</a>
                            </li>
                        }
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (isLoggedIn)
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-light me-3">Hello, @userName (@role)</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="footer bg-light text-center py-3 mt-4">
        <span>&copy; 2025 - RoleBasedProductApp</span>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
