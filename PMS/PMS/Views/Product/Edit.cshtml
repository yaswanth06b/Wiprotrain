@model ProductModel
@{
    ViewBag.Title = "Edit Product";
}
<h2>Edit Product</h2>

<form method="post" asp-action="Edit">
    <input type="hidden" name="Id" value="@Model.Id" />

    <label>Name:</label>
    <input type="text" name="Name" value="@Model.Name" required /><br />

    <label>Price:</label>
    <input type="number" step="0.01" name="Price" value="@Model.Price" required /><br />

    <button type="submit">Update</button>
</form>
<br />
<a asp-action="ProductList">Back to List</a>